{
  "app-id": "re.sonny.Commit",
  "runtime": "org.gnome.Platform",
  "runtime-version": "42",
  "sdk": "org.gnome.Sdk",
  "command": "re.sonny.Commit",
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--require-version=1.1.2",
    "--device=dri",
    "--filesystem=host"
  ],
  "x-run-args": ["foo.txt"],
  "modules": [
    {
      "name": "Commit",
      "buildsystem": "meson",
      "builddir": true,
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ]
}
